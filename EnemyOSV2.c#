using System;
using System.Diagnostics;
using System.IO;

class SimpleOS
{
    static void Main()
    {
        Console.WriteLine("EnemyOS V2");

        while (true)
        {
            Console.Write("$ ");
            string command = Console.ReadLine();

            if (command == "exit")
            {
                break;
            }

            Process process = new Process();
            process.StartInfo.FileName = command;
            process.Start();
            process.WaitForExit();
        }
    }
}
